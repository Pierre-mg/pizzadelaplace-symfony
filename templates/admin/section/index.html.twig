{% extends 'base_admin.html.twig' %}

{% block title %}Liste des sections{% endblock %}

{% block body %}

<section class="admin_list">

<div class="container">

    <h1>Sections</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                <td>{{ section.title }}</td>
                <td>
                    <a href="{{ path('section_edit', {'id': section.id}) }}"><button class="btn btn-warning" >Modifier</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>

</section>
{% endblock %}
